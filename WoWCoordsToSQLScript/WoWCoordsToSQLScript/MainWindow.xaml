        <Label Content="(for the creature__movement and creature__movement__template tables)" HorizontalAlignment="Left" Margin="56,12,0,0" VerticalAlignment="Top" Width="397"/>
        <TextBox x:Name="txtId" HorizontalAlignment="Left" Height="20" Margin="127,242,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="53" ToolTip="GUID of the creature/NPC. Located in: creature table (field: GUID) creature__movement table (field: ID)"/>
        <Label Content="guid or entry ID of creature/NPC" HorizontalAlignment="Left" Height="29" Margin="180,240,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
        <TextBox x:Name="txtPoint" HorizontalAlignment="Left" Height="20" Margin="127,267,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="31" ToolTip="Index of the position this set of waypoints starts from, e.g. 1 if the very first entry, 2 if the 2nd entry, 5 if the 5th entry, etc" Text="1" LostFocus="txtPoint_LostFocus"/>
